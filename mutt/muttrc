set use_from = yes
set envelope_from = yes
set user_agent = no

set mbox_type = Maildir
set timeout = 30
set folder = $HOME/mail/
set spoolfile = +INBOX
set record = +Sent
set postponed = +Drafts
mailboxes +INBOX

source $XDG_CONFIG_HOME/mutt/host/$HOSTNAME

set header_cache = $XDG_CACHE_HOME/mutt/headers
set message_cachedir = $XDG_CACHE_HOME/mutt/bodies
set alias_file= $XDG_DATA_HOME/mutt/aliases
source $alias_file

source $XDG_CONFIG_HOME/mutt/headers
set mailcap_path = $XDG_CONFIG_HOME/mutt/mailcap
auto_view text/html application/text application/pdf
alternative_order text/enriched text/html text/plain text

set sort = threads
set sort_aux = last-date-received
set attribution = "Also sprach %n:\n"
set forward_attribution_intro = "--------- >8 ---------"
unset forward_attribution_trailer
set sort_alias = alias
set reverse_alias = yes

set edit_headers = yes
set fast_reply = yes
set include = yes
set forward_quote = yes
set copy = yes
set confirmappend = no
set delete = yes

set send_charset = "us-ascii:utf-8"

source $XDG_CONFIG_HOME/mutt/colours
source $XDG_CONFIG_HOME/mutt/keys
