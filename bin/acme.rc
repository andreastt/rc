#!/usr/bin/env rc

. $PLAN9/lib/acme.rc

TERM=dumb
SHELL=rc
PAGER=cat

plumber

if(~ $RETINA 1) {
	devdrawretina=1
	varfont=/mnt/LucidaGrande/32a/font
	fixfont=/mnt/Menlo-Regular/26a/font
}
if not {
	varfont=$PLAN9/font/lucsans/unicode.7.font
	fixfont=$PLAN9/font/fixed/unicode.6x13.font
}

exec acme -a -f $varfont -F $fixfont $*

