#!/usr/bin/env rc

. $PLAN9/lib/acme.rc

TERM=dumb
SHELL=rc
PAGER=nobs

pgrep fontsrv > /dev/null || fontsrv &
pgrep plumber > /dev/null || plumber &

fn cd { builtin cd $1 && awd $sysname }

devdrawretina=1
varfont=/mnt/LucidaGrande/28a/font
fixfont=/mnt/Menlo-Regular/24a/font

exec acme -f $varfont -F $fixfont $*
