for_window [class="(?i)chromium"] border none
for_window [class="idea"] border none
for_window [class="(?i)mozilla thunderbird"] border none
for_window [title="Desktop"] border none
for_window [title="Desktop"] floating disable
#for_window [title="Desktop"] move scratchpad

