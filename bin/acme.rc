#!/usr/bin/env rc

. $PLAN9/lib/acme.rc

TERM=dumb
SHELL=rc
PAGER=nobs

pgrep plumber > /dev/null || plumber &

fn cd { builtin cd $1 && awd $sysname }

varfont=/usr/share/fonts/plan9/LucidaGrande/13a/font
fixfont=/usr/share/fonts/plan9/Menlo-Regular/12a/font

exec acme -a -f $varfont -F $fixfont $*
