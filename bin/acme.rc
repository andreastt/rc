#!/usr/bin/env rc

# To start fontsrv: fontsrv -m /mnt

. $PLAN9/lib/acme.rc

TERM=dumb
SHELL=rc
PAGER=cat

plumber

if(~ $RETINA 1) {
	devdrawretina=1
	varfont=/mnt/LucidaGrande-RegularW/28a/font
	fixfont=/mnt/LucidaGrandeMono/24a/font
}
if not {
	varfont=/mnt/LucidaGrande/13a/font
	fixfont=/mnt/Menlo-Regular/12a/font
}

fn l { ls | mc }

exec acme -a -f $varfont -F $fixfont $*
