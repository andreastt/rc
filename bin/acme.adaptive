#!/bin/sh

#. $PLAN9/lib/acme.rc

TERM=dumb
SHELL=rc
PAGER=nobs

pgrep plumber > /dev/null || plumber &

#fn cd { builtin cd $1 && awd $sysname }

devdrawretina=1

if [ $(system_profiler SPDisplaysDataType | grep Resolution | cat | grep -Eo '([0-9]{4})' | head -1) -gt 1920 ]
then
	fixfont=/mnt/LucidaGrandeMono/24a/font
	varfont=/mnt/LucidaGrande-RegularW/28a/font
else
	fixfont=/mnt/LucidaGrandeMono/12a/font
	varfont=/mnt/LucidaGrande-RegularW/13a/font
fi

exec acme -a -f $varfont -F $fixfont $*
