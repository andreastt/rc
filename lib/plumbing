# to update: cat $HOME/lib/plumbing | 9p write plumb/rules

editor = acme

# Bugzilla
type is text
data matches 'Bug ([0-9]+)'
plumb to web
plumb start web https://bugzilla.mozilla.org/show_bug.cgi?id=$1

# Selenium
type is text
data matches '[Ii]ssue ([0-9]+)'
plumb to web
plumb start web https://code.google.com/p/selenium/issues/detail?id=$1

# critic reviews
type is text
data matches 'r/([0-9]+)'
plumb to web
plumb start web https://critic.hoppipolla.co.uk/r/$1

# Pictures
type is text
data matches '[a-zA-Z0-9_-./]+'
data matches '([a-zA-Zï¿½-?0-9_\-./]+) \.(jpe?g|JPE?G|gif|GIF|tiff?|TIFF?|ppm|bit|png|PNG)'
arg isfile $0
plumb start open $file

include basic
