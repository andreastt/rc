[general]
accounts = mozilla
maxsyncaccounts = 3
maxconnections = 3
ignorereadonly = no
quick = 10

[Account mozilla]
localrepository = mozilla-local
remoterepository = mozilla-remote
status_backend = sqlite

[Repository mozilla-local]
type = Maildir
localfolders = ~/Mail

[Repository mozilla-remote]
type = IMAP

keepalive = 60
holdconnectionopen = yes

folderfilter = lambda folder: folder not in ["Contacts", "Emailed Contacts", "trash", "drafts", "sent"]

remoteuser = atolfsen@mozilla.com
remotehost = mail.mozilla.com

ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

