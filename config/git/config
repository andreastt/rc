[user]
	name = Andreas Tolfsen
	email = ato@mozilla.com

[github]
	user = andreastt

[branch]
	autosetuprebase = always

[push]
	default = current

[pull]
	rebase = true

[fetch]
	recurseSubmodules = true

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log --oneline --graph --decorate
	cp = cherry-pick
	l = log
	lm = log master..
	llm = log -p master..
	b = branch
	squash = !git rebase -i --autosquash $(git merge-base HEAD origin/master)
	fixup = !git commit --fixup=`git log --format='%H %s' | grep -Ev '[a-z0-9]{40}\\sfixup!\\s' | head -n1 | cut -f 1 -d ' '`
	patch = format-patch -n 'HEAD^'