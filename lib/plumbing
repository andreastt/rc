# to update: cat $home/lib/plumbing | 9p write plumb/rules

editor = acme

# Toolkit modules
type is text
data matches 'resource:\/\/gre\/modules\/(.+)\.jsm(:([0-9]+))?'
arg isfile /home/ato/src/gecko/toolkit/modules/$1.jsm
data set /home/ato/src/gecko/toolkit/modules/$1.jsm
attr add addr=$3
plumb to edit

# Marionette
type is text
data matches 'chrome:\/\/marionette\/content\/(.+)\.js(:([0-9]+))?'
arg isfile /home/ato/src/gecko/testing/marionette/$1.js
data set /home/ato/src/gecko/testing/marionette/$1.js
attr add addr=$3
plumb to edit

# Bugzilla
type is text
data matches '[Bb]ug ([0-9]+)'
plumb to web
plumb start web https://bugzilla.mozilla.org/show_bug.cgi?id=$1

