#type is text
#data matches '([abcdef0-9]+)'
#plumb start rc -c 'git show $1'

# Pictures
type is text
data matches '[a-zA-Z0-9_-./]+'
data matches '([a-zA-Zï¿½-?0-9_\-./]+) \.(jpe?g|JPE?G|gif|GIF|tiff?|TIFF?|ppm|bit|png|PNG)'
arg isfile $0
plumb start open $file

include basic
