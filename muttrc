# Set UTF-8 as default charset, and vim as the default editor.
# Will auto-view messages as HTML by default.
set charset="utf-8"
set editor="$HOME/important/killsig %s; vim %s"
#set use_from
#set from="ato@sny.no"
#set sig_on_top="yes"
auto_view "text/html"
set timeout=60
set mail_check=30
set fast_reply=yes

set mbox_type=Maildir
set folder=$HOME/.mail
set spoolfile=+Personal/INBOX

unset mark_old  # Unread messages are still marked unread when quitting.

#set indent_string="\| "
#set attribution="/ Also sprach %n <%a> (%d):"
set attribution="* SÃ¥ talte %n <%a>:"

set menu_scroll=yes  

# Headers, ignore them all.
ignore *

# Enable the headers I want to see.
unignore	from: subject to cc bcc mail-follow-up-to date \
			x-envelope-to \
			x-diagnostic \
			x-url \
			user-agent \
      x-mailer

# Sidebar general settings.
set sidebar_width=19
#set sidebar_visible="no"
set sidebar_delim="|"

# Which mailboxes to list in the sidebar?
mailboxes	" -~- Personal -~-" \
      "+Personal/INBOX" \
      "+Personal/INBOX.Out"

mailboxes	" -~- E-tjenesten -~-" \
      "imap://ato@e-tjenesten.org/INBOX" \
      "imap://ato@e-tjenesten.org/INBOX.Out"

mailboxes "  -~- Opera -~-" \
      "+Opera/INBOX" \
      "+Opera/Sent"

mailboxes "  -~- FSFE -~-" \
      "+FSFE/INBOX" \
      "+FSFE/INBOX.Out"

mailboxes	"  -~- School -~-" \
			"imaps://andretol@imap.uio.no/INBOX"

mailboxes	"  -~- Wiki -~-" \
			"imap://moongates1@imap.domeneshop.no/INBOX"

# Colour of the folders with new mail
color sidebar_new yellow default

# C-n/C-p to select next/previous folder
# C-o to open selected folder
bind index \CP sidebar-prev
bind index \CN sidebar-next
bind index \CO sidebar-open
bind pager \CP sidebar-prev
bind pager \CN sidebar-next
bind pager \CO sidebar-open

# b toggles sidebar visibility
#macro index b "<enter-command>toggle sidebar_visible<enter><refresh>"
#macro pager b "<enter-command>toggle sidebar_visible<enter><redraw-screen>"

# Remap bounce-message function to "B"
#bind index B bounce-message

# First mail server.
set folder="imaps://ato:SECRET@imap.e-tjenesten.org/"

# Third mail server.
set folder="imaps://andretol@imap.uio.no/"
account-hook "imaps://andretol@imap.uio.no/" "set imap_user=andretol@imap.uio.no imap_pass=SECRET"

# Fifth mail server.
set folder="imap://moongates1@imap.domeneshop.no/"
account-hook "imap://moongates1@imap.domeneshop.no/" "set imap_user=moongates1@imap.domeneshop.no imap_pass=SECRET"

# Cache the headers, so we won't have to donwload them every time.
#set header_cache="~./mutt_header_cache"

# Folder hooks.
folder-hook "imaps://ato@imap.e-tjenesten.org/" set record="imaps://ato@e-tjenesten.org/Out"

folder-hook Opera set from="andreastt@opera.com"
#folder-hook Opera set attribution="* Also sprach %n <%a>:"
folder-hook Opera set record="~/.mail/Opera/Sent"
folder-hook Opera set postponed="~/.mail/Opera/Drafts"

folder-hook FSFE set from="ato@fsfe.org"
#folder-hook FSFE set attribution="* Also sprach %n <%a>:"
folder-hook FSFE set record="~/.mail/FSFE/INBOX.Out"
folder-hook FSFE set postponed="~/.mail/FSFE/INBOX.Drafts"

folder-hook Personal set from="ato@sny.no"

# Colours
color normal default default
color hdrdefault white black
color signature black default
color attachment cyan default
color indicator black white
color quoted yellow default
color quoted1 green default
color tilde blue default
color status white black
color tree black default

