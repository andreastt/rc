[github]
  user = andreastt

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  untracked = black bold

[merge]
  tool = mymeld
  conflictstyle = diff3

[mergetool "mymeld"]
  cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED

[branch]
  autosetuprebase = always

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --oneline --graph --decorate
  cp = cherry-pick
  l = log
  lm = log master..
  llm = log -p master..
  b = branch

[push]
  default = current
[mergetool "meld"]
	cmd = meld
	trustExitCode = true
