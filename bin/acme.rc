#!/bin/bash

export TERM=dumb
export SHELL=bash
export PAGER=nobs
export EDITOR=E

if [ -d $NAMESPACE ]
then
	export NAMESPACE=$(mktemp -d -t ns.$USER.XXXXXX)
else
	mkdir -p $NAMESPACE
	if [ -f $HOME/acme.dump ]
	then
		loadflag=-l$HOME/acme.dump
	fi
fi

function cleanup {
	rm -rf $NAMESPACE
}
trap cleanup EXIT

echo $NAMESPACE
plumber
acme -a $*
