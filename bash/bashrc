set -a
source $HOME/rc/environment
set +a
source $HOME/rc/bash/cpu.sh

alias .='pwd'
alias ..='cd ..'

if [[ $(ps -p $PPID -o command=) == "win" ]]
then
	alias ll="/bin/ls -Flh"
	alias ls="ls -F | mc"
else
	color=""
	case $(uname) in
	Darwin) color="-G" ;;
	*) color="--color" ;;
	esac
	alias ll="ls -Fhl $color"
	alias ls="ls -F $color"
fi
alias l=ls

PS1="$ENVTOOLKIT_PROMPT\h% "

# in vi mode, clear screen with Control-L
[[ "$-" =~ "i" ]] && bind -m vi-insert "\C-l":clear-screen
