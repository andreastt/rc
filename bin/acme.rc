#!/bin/sh

TERM=dumb
SHELL=rc
PAGER=nobs
if [ -d $NAMESPACE ]
then
	export NAMESPACE=$(mktemp -d)
else
	mkdir $NAMESPACE
fi

trap "rm -rf $NAMESPACE" EXIT
trap "kill -TERM -$$" EXIT

#vfont=/mnt/font/LucidaGrande-RegularW/14a/font
#ffont=/mnt/font/LucidaGrandeMono/13a/font

echo $NAMESPACE
plumber
acme -a $*

