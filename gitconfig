# -*- mode: conf -*-

[user]
  name = Andreas Tolfsen
  email = andreastt@opera.com

[github]
  user = andreastt

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = black reverse
  local = black
  remote = green

[color "diff"]
  meta = dim black bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  untracked = black bold

[merge]
  tool = mymeld
  conflictstyle = diff3

[mergetool "mymeld"]
  cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED

[branch]
  autosetuprebase = always

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --oneline --graph --decorate
  cp = cherry-pick
  l = log
  lm = log master..
  llm = log -p master..
  b = branch
  squash = !git rebase -i --autosquash $(git merge-base HEAD origin/master)
  fixup = !git commit --fixup=`git log --format='%H %s' | grep -v '[a-b0-9]{40}\\sfixup!\\s' | head -n1 | cut --fields=1 --delimiter=' '`

[push]
  default = current
