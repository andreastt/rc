#!/bin/sh

export TERM=dumb
export SHELL=rc
export PAGER=nobs
export EDITOR=E

if [ -d $NAMESPACE ]
then
	export NAMESPACE=$(mktemp -d)
else
	mkdir $NAMESPACE
fi

trap "rm -rf $NAMESPACE" EXIT
trap "kill -TERM -$$" EXIT

case $(uname) in
Linux*)
	size=10
	;;
*)
	size=13
	;;
esac

vfont=/mnt/font/LucidaGrande/${size}a/font
ffont=/mnt/font/LucidaGrandeMono/${size}a/font

echo $NAMESPACE
plumber
acme -a -f$vfont -F$ffont $*

