set -g status off
set -g pane-border-style fg=colour236
set -g pane-active-border-style fg=colour67
set -g mouse on
set -g focus-events on
set -s escape-time 0
setw -g aggressive-resize on
set -g base-index 1
setw -g pane-base-index 1

# automatically set window title
set-window-option -g automatic-rename on
set-option -g set-titles on

set-option -g prefix C-a
bind-key C-a send-prefix
#
# create new windows at same directory
bind '"' split-window -c "#{pane_current_path}"
bind % split-window -h -c "#{pane_current_path}"
bind c new-window -c "#{pane_current_path}"
bind -n M-Enter split-window -h -c "#{pane_current_path}"
bind -n M-S-Enter split-window -v -c "#{pane_current_path}"
#bind -n M-Shift-Enter split-window -v -c "#{pane_current_path}"
bind -n M-C-Enter split-window -v -c "#{pane_current_path}"

#bind -n C-Shift-Enter split-window -v -c "#{pane_current_path}"
bind -n C-S-Enter split-window -v -c "#{pane_current_path}"
bind -n C-Enter split-window -h -c "#{pane_current_path}"

# vim-like pane switching
bind -nr ª select-pane -U  # k
bind -nr √ select-pane -D  # j
bind -nr ˛ select-pane -L  # h
bind -nr ﬁ select-pane -R  # l

# vim-like pane resizing
bind -nr M-Up resize-pane -U 4
bind -nr M-Down resize-pane -D 4
bind -nr M-Left resize-pane -L 4
bind -nr M-Right resize-pane -R 4

# vim-like pane moving
bind -n ¬ swap-pane -D  # k
bind -n º swap-pane -U  # j

bind-key w choose-window

# swtich or create window with M-<number>
bind-key -n M-1 if-shell 'tmux select-window -t :1' '' 'new-window -t :1 -c "#{pane_current_path}"'
bind-key -n M-2 if-shell 'tmux select-window -t :2' '' 'new-window -t :2 -c "#{pane_current_path}"'
bind-key -n M-3 if-shell 'tmux select-window -t :3' '' 'new-window -t :3 -c "#{pane_current_path}"'
bind-key -n M-4 if-shell 'tmux select-window -t :4' '' 'new-window -t :4 -c "#{pane_current_path}"'
bind-key -n M-5 if-shell 'tmux select-window -t :5' '' 'new-window -t :5 -c "#{pane_current_path}"'
bind-key -n M-6 if-shell 'tmux select-window -t :6' '' 'new-window -t :6 -c "#{pane_current_path}"'

# change current pane to next window
bind-key ! join-pane -t :1
bind-key @ join-pane -t :2
bind-key '#' join-pane -t :3
bind-key '$' join-pane -t :4
bind-key '%' join-pane -t :5
bind-key '^' join-pane -t :6
